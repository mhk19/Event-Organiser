<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDetails"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp">

    </TextView>
    <TextView
        android:id="@+id/accountDetails_Student_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp"
        android:text="Username"
        android:textSize="24sp"
        android:textColor="#000000">

    </TextView>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enrollment Number"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp">

    </TextView>
    <TextView
        android:id="@+id/accountDetails_Student_EnrollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp"
        android:text="EnrollmentNumber"
        android:textSize="24sp"
        android:textColor="#000000">

    </TextView>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp">

    </TextView>
    <TextView
        android:id="@+id/accountDetails_Student_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp"
        android:text="Email Address"
        android:textSize="24sp"
        android:textColor="#000000"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp">

    </TextView>
    <TextView
        android:id="@+id/accountDetails_Student_MobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="6dp"
        android:text="Mobile Number"
        android:textSize="24sp"
        android:textColor="#000000">

    </TextView>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />


    <Button
        android:id="@+id/AccountDetails_Student_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Edit">

    </Button>
    <Button
        android:id="@+id/AccountDetails_Student_PassChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Change Password">

    </Button>

    <ProgressBar
        android:id="@+id/progressBar_ad2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>
</androidx.core.widget.NestedScrollView>